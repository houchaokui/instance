/* pages/foodlist/foodlist.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.searchbox{
  width:calc(100% - 40rpx);
  height:90rpx;
  background-color:#F1F1F1;
  margin:0 auto;
  border-radius: 45rpx;
  position: relative;/*给图标的父容器加一个相对定位的属性，把他作为定位的参考对象。*/
}

.searchbox input{
  height: 90rpx;
  margin: 0 100rpx;
}

.searchbox image{
  width: 50rpx;
  position: absolute;
  left:20rpx;
  top:22rpx;
}

.listbox{
  width: 100%;
  height:calc(100% - 90rpx);
  overflow-y: scroll;
}

.fooditem{
  height:270rpx;
  border-bottom: solid 1rpx #F1F1F1;
  position: relative;
}

.fooditem image{
  width: 220rpx;
  margin: 20rpx;
}
.rightbox{
  width:calc(100% - 260rpx);
  height: 270rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.line1{
  font-size: 45rpx;
  font-weight: bold;
  padding-top: 10rpx;
}
.line2{
  color: #898989;
}

.line3{
  color: #F76558;
  line-height:70rpx;
}

.line4 text{
  border:solid 1px #E0C99F;
  color: #E0C99F;
  padding:2rpx 10rpx;
  margin-right: 10rpx;
}

.itemhover{
  background-color: #eee;
}
